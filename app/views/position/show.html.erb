<% content_for :head do %> 
	  <style>

	  	 #position 			{ float: left; background: white; border-width:1px; height: 300px; width: 800px; margin-left: 00px}
	  	.level 				{ float: left; height: 15px; width: <%= @pos_width %>px;  border: 1px solid #000; border-right:5px solid black;background: -webkit-gradient(linear, left top, right top, from(gray), to(white));}
	  	
	  	.col				{ height: 17px; width: <%= @pos_width %>px;  border: 1px solid #000; border-right:1px solid black;}
	  	.pos 				{ float: left; height: 20px; width: <%= @pos_width %>px;  border: 1px solid #000; border-right:5px solid black;background-color: #eec917;}
	    .pos_Empty 			{ float: left; height: 20px; width: <%= @pos_width %>px;  border: 1px solid #000; border-right:5px solid black;background-color: white;}


	    .pos_draggedhelper  { float: left; height: 20px; width: <%= @pos_width %>px;  border: 1px solid #000; border-right:5px solid black;background-color: #eec917;} 
	    .orange				{ float: left; height: 20px; width: 80px;  border: 1px solid #000; border-right:5px solid black;background-color: orange;}
	    .green				{ float: left; height: 20px; width: 80px;  border: 1px solid #000; border-right:5px solid black;background-color: green;}
	    .red				{ float: left; height: 20px; width: 80px;  border: 1px solid #000; border-right:5px solid black;background-color: red;}
	    .pos_divider 		{ float: left; height: 1px;  width: <%= @level_width %>px; border: 1px solid #999; background: black}
	    .level_Empty        { float: left;  height: 15px; width: <%= @level_width %>px; border:1px solid #000; background: white}  
		.bay                { float: center;  margin:auto; height: 20px; width: 80px; border: 1px solid #000; background: -webkit-gradient(linear, left top, right top, from(#888888), to(#F8F8F8));}
		</style>

	  
<script type="text/javascript">	

//global variable
    bay_html_map = {}	          
	$( init );
 
 $(document).ready(function(){  

		    $('#zoom').click(function(){
		    $('#location2').load("/position/"+ <%= @bay_id %> + '?zoom=yes'); 
		    $('#location2').animate({ 'zoom': 1.2 }, 800);
		    
		    $('#location2').dialog({
    	  	height: 500,
      		width: 1000,
      		modal: true
    });
					
	});	    
});

  
 
//

//To swap the position of two items
function init() { 
 
 	bayHTML.setDragnDrop()
}

var bayHTML = {
	
setDragnDrop: function setDragnDrop() { 
 
	  $('.pos').draggable(
	     {
	     //containment: '#position',
	      //cursor: 'move',
	      //snap: '#position',
	      revert: true, 
	      helper: helpermethod,
	      
	      start: function(event, ui) {
					 var offset = $(this).offset(); 
					 
					 bay_html_map.pos= $(this).attr('id');
					 bay_html_map.title= $(this).attr('title');
					 bay_html_map.content= $(this).attr('class') ;
					 
	 	   }
	  });

	function helpermethod( event ) {
  	
		  //image = '<%= image_tag("pallet.jpg", alt: "", :width => 60, :height => 60) %>' 	
  		   newdiv = '<div id ="pos_draggedhelper" class="pos_draggedhelper">' +  $(this).attr('title') + '</div>'
  		   return newdiv;
	}
	
	
	  $('.pos_Empty').droppable( {
	  	  drop: handleDropEvent
	  	  
	    } ); 
	  
   
	function handleDropEvent( event, ui ) {

		  ui.draggable.element = $(this); 		  
		  oldTitle = $(this).attr('title');
		  oldClass = $(this).attr('class');
		  $(this).removeClass('ui-draggable ui-droppable')
		  
		  $(this).attr('title', bay_html_map.title);
		  $(this).attr('class', bay_html_map.content);

		 $('#pos_draggedhelper').html("");			  
		 $('#pos_draggedhelper').attr('class', 'pos_Empty');	
		  pos = bay_html_map.pos;
		  $("#"+pos).attr('title', oldTitle);
		  $("#"+pos).attr('class', oldClass);
		  $(this).removeClass('ui-draggable ui-droppable')
		  
		  ui.draggable.draggable( 'disable' );
		  bayHTML.setDragnDrop();
		  $.post("/position",
		  				{
		  					"position[event]": "update_posclass",
		  					"position[dragpos_id]": pos,
		  					"Position[bay_id]": "<%=@bay_id%>",
		  					"position[dragpos_class]": oldClass,
		  					"position[dragpos_title]" :oldTitle.substring(6),
		  					"position[droppos_id]": $(this).attr('id'),
		  					"position[droppos_class]":bay_html_map.content,
		  					"position[droppos_title]" :bay_html_map.title.substring(6)
		  					
		  				},
		  				function(data,status)
		  				{
		  					
          				});
          	
		} 
	} //ends the init function

}

</script>

 <% end %>
 

<div id="position" class="position" ">

   <div align="center" class="bay"> Bay: <%= @cl_bay_id %> </div>
   
   
   <div style="float: left" id="location"> 
    <table border="0" style="border-collapse:collapse">
   	<% @levelhash.each do |level, levelvalue| %>
		<tr> <td><div  class="level">Level: <%= level %></div></td>
		  <% if levelvalue.empty? %>
		  	<td><div class="level_Empty"></div></td></tr>
		  <% else %>
		  <td>
	    	  <% levelvalue.each do |pos, posvalue| %>
	    	            
	          			 
			 	 		     <div id="<%= pos %>" class="<%= posvalue[:type] %>" title=" Item: <%= posvalue[:item] %>" >	   	    	  
				   	    	 <label id="<%= pos%>_label">  <%= posvalue[:customer_id] %> </label> 	   	    	
			   	    		 </div>
			   	    	 
					
		   		<% end %></td></tr>
	   		
	   		<% end %>
	   		<tr><td width="<%= @pos_width %>px"></td>
	   			<td class= "pos_divider"><div class= "pos_divider"> </div></td>
	   		</tr>
    	 <% end %>
    
   
</table>
</div>

<% if @zoom != "yes"%>
<div style="float: left; border: 1px solid #000;"><%= image_tag("zoom.jpg", alt: "", :width => 40, :height => 40, :id => "zoom")%></div>
<% end %>
</div>
<div id="location2"></div>

<%= yield %>



