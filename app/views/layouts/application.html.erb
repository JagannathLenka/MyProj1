<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %> | Slotting Management </title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    controller.controller_name, :media => "all" %>

  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag controller.controller_name %>

  <%= csrf_meta_tags %>

  
  <script>
  		  $(document).ready(function(){	
			$("#wrap").css("height",$( window ).height() * .95)			
	      });

<% if !current_page?(:action=>"index", :controller=>"login") || current_page?(:action=>"aboutus", :controller=>"login") || current_page?(:action=>"thanks", :controller=>"userregister")  %>
	   
	      $(document).ready(function() {
	    	$.sessionTimeout({
		        keepAliveUrl : '/login/?session=live',
                redirUrl     : '/login',
                logoutUrl    : '/login',
                warnAfter    : 3300000, // 15 minutes
                redirAfter   : 3600000 // 20 minutes
	    	});
		});
<% end %>
			
  </script>
  
  
  
  <style>
  	#wrap {
		margin-left: 5%;
		margin-right: 5%;
		}
		
		#footer > .contain {
		margin-left: 5%;
		margin-right: 5%;

		}
		th.ui-th-column div{
        white-space:normal !important;
        height:auto !important;
        padding:2px;
        }
  </style>
  <%= yield :head %>
 </head>

<body>
	
<div id="wrap" style="height:auto; margin-left: 5%; margin-right: 5%;">
  <div class="contain">
  	<!--==Content goes here -->
		<%= yield %>
  </div>	
 </div> 
 
<% if params[:lightweight] != "yes" %>
	<div id="footer" style="margin: 0; float:left; width: 100%;">
	    <div class="text-muted" style="text-align: center;height:5px">All copyrights reserved SlotFire, contact the slotfire team</div>
	 </div>
<%end%>

</body>
</html>

